{
  "extends": "@oe/config/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["@oe/types/global.d.ts", "next/image-types/global"],
    "paths": {
      "#actions/*": ["./src/actions/*"],
      "#services/*": ["./src/services/*"],
      "#types/*": ["./src/types/*"],
      "#utils/*": ["./src/utils/*"],
      "#schemas/*": ["./src/schemas/*"],
      "#hooks/*": ["./src/hooks/*"],
      "@/*": ["./src/*"],
      "@oe/core": ["../../packages/core/src"],
      "@oe/i18n": ["../../packages/i18n/src"],
      "@oe/assets": ["../../packages/assets/src"]
    }
  },
  "include": ["src"]
}
