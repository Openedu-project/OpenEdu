{
  "extends": "@oe/config/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "@oe/types/global.d.ts", "next/image-types/global"],
    "paths": {
      "@/*": ["./src/*"],
      "@oe/api": ["../../packages/api/src"],
      "@oe/assets": ["../../packages/assets/src/icons/index.ts"],
      "@oe/assets/images/*": ["../../packages/assets/src/images/*"],
      "@oe/core": ["../../packages/core/src"],
      "@oe/dashboard": ["../../packages/dashboard/src"],
      "@oe/i18n": ["../../packages/i18n/src"],
      "@oe/ui": ["../../packages/ui/src"]
    }
  },
  "include": ["next-env.d.ts", "src", ".next/types/**/*.ts", "../../packages/api/src/*"],
  "exclude": ["node_modules", ".next", "sst.config.production.ts"]
}
